<head>
    <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 80%;
    }
    
    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
    
    tr:nth-child(even) {
        background-color: #dddddd;
    }
    </style>
</head>
<a href="/songs">Dashboard</a>

<h1><%= @user.full_name %>'s Playlist</h1>
<table>
    <tr>
        <th>Artist</th>
        <th>Title</th>
        <th>Times Added</th>
    </tr>
    <% @user.adds.each do |add| %>
    <tr>
        <td> <%= add.song.artist %> </td>
        <td> <a href="/songs/<%= add.song.id %>"> <%= add.song.title %> </a></td>
        <td> <%= add.amount %> </td>
    </tr>
    <%end%>
</table>
